<div class="scoreboard">
  <div id="correct" class="score">
    <h4>Correct</h4>
    <p id="num_correct">
      <%= @round.num_correct %>
    </p>
  </div>
  <div id="wrong" class="score">
    <h4>Wrong</h4>
    <p id="num_wrong">
      <%= @round.num_wrong %>
    </p>
  </div>
  <div id="remaining" class="score">
    <h4>Remaining</h4>
    <p id="num_remaining">
      <%= @round.cards_left %>
    </p>
  </div>
</div>

<div class="jumbotron">
  <div id="card">
    <% if @message %>
      <h1><%= @message %></h1>
    <% elsif @card %>
      <h1 id="card-question">
        <%= @card.question %>
      </h1>
    </div>
    <div class="interface">
      <form method="post" action="/decks/<%= @deck.id %>" id="guess">
        <div class="input-group">
          <input type="hidden" id="card_id" name="card_id" value="<%= @card.id %>">
          <input id="cometomama" type="text" class="form-control" name="guess" placeholder="Guess">
          <span class="input-group-btn">
            <input type="submit" value="Go!" class="btn btn-default" type="button">Go!</button>
          </span>
        </div>
      </form>
      <a id="next-button" class="btn btn-primary btn-lg" href="/decks/<%= @deck.id %>">Skip</a>
    </div>
  <% end %>
</div>
